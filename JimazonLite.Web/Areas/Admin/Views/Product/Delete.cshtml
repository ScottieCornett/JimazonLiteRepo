@model Product

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-danger bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" disabled class="form-control border-0 shadow" />
                    <label asp-for="Name" class="ms-2">Item Name</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Description" disabled class="form-control border-0 shadow" />
                    <label asp-for="Description" class="ms-2">Item Description</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price" disabled class="form-control border-0 shadow" />
                    <label asp-for="Price" class="ms-2">Price</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Quantity" disabled class="form-control border-0 shadow" />
                    <label asp-for="Quantity" class="ms-2">Item Quantity</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ModelNumber" disabled class="form-control border-0 shadow" />
                    <label asp-for="ModelNumber" class="ms-2">Model Number</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="DateAdded" disabled class="form-control border-0 shadow" />
                    <label asp-for="DateAdded" class="ms-2">Date Added</label>
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-light form-control">
                            Back to List
                        </a>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>




@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}