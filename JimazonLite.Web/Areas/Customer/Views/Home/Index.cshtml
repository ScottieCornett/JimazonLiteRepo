@model IEnumerable<Product>

<div class="row pb-2">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row pb-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@product.ImageUrl" class="card-img-top rounded" height="500px">
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Name</p>
                                <p class="card-title text-warning text-center">Price: @product.Price.ToString("C")<b></b></p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Details"
                           asp-route-Id="@product.Id"
                               class="btn btn-primary bg-gradient border-0 form-control">
                                More Info
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>